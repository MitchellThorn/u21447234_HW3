@using u21447234_HW3.Models
@model List<FileModel>

@{
    ViewBag.Title = "Videos";
    ViewBag.Message = "All your uploaded Videos will appear here.";
}

<h2><b>@ViewBag.Title</b></h2>
<h4>@ViewBag.Message</h4>

<style>
    body {
        background-image: radial-gradient(circle, blue, aqua, lightskyblue, lightblue);
        background-attachment: fixed;
    }

    .card {
        height: 200px;
        margin-bottom: 10px;
        margin-top: 10px;
        position: relative;
        border: dashed;
        border-color: dimgrey;
    }

    .card-body {
        position: absolute;
        bottom: 2px;
        margin-left: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="well-lg" style="background-color: #262626; color: white;">
    <div class="row">
        @foreach (FileModel videos in Model)
        {
            <div class="col-lg-4">
                <div class="card">
                    <img src="~/App_Data/image/@videos.FileName" alt="Card Image" />
                    <div class="card-body">
                        <h4>@videos.FileName</h4>
                        <button class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadVideos",
                            new { fileName = videos.FileName })
                        </button>
                        <button class="btn btn-danger">
                            @Html.ActionLink("DELETE", "DeleteVideos",
                            new { fileName = videos.FileName },
                            new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

